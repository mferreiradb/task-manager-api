{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": { "@/*": ["*"] }
  },
  "exclude": ["node_modules/**/*", "**/*.html"]
}
