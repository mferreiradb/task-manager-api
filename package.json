{
  "name": "task-manager-api",
  "description": "API to manage tasks",
  "version": "1.0.0",
  "author": "renan_learning <renan_learning@outlook.com>",
  "private": true,
  "scripts": {
    "dep:install": "./dep-install.sh",
    "check:updates": "npx ncu -i",
    "type:check": "tsc --noEmit",
    "lint": "eslint '**/*.ts' --fix --ignore-path .gitignore",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "test": "vitest",
    "test:unit": "TEST_TYPE=unit vitest unit",
    "test:integration": "TEST_TYPE=integration vitest integration",
    "coverage": "vitest run --coverage",
    "dev": "sls offline --reloadHandler",
    "deploy": "sls deploy",
    "deploy:show": "sls info"
  },
  "prisma": {
    "schema": "src/infra/databases/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "pino": "^9.6.0",
    "pino-http": "^10.3.0",
    "pino-http-print": "^3.1.0",
    "serverless": "^4.4.18",
    "serverless-http": "^3.2.0",
    "serverless-offline": "^14.4.0",
    "serverless-plugin-ifelse": "^1.0.7",
    "serverless-prune-plugin": "^2.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-vitest": "^0.5.4",
    "npm-check-updates": "^17.1.13",
    "prettier": "^3.4.2",
    "prisma": "^6.2.0",
    "supertest": "^7.0.0",
    "testcontainers": "^10.16.0",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
